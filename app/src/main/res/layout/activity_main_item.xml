<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <ImageView
        android:id="@+id/imageViewId"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@drawable/ic_room_luigi"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="10dp" />

    <TextView
        android:id="@+id/title_reunion"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/itemView_mail"
        app:layout_constraintEnd_toStartOf="@+id/delete_button_itemView"
        app:layout_constraintStart_toEndOf="@+id/imageViewId"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="RÃ©union A - 19H00 - Luigi" />

    <TextView
        android:id="@+id/itemView_mail"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:textColor="@color/greyDark"
        android:textSize="12sp"
        android:maxLines="2"
        android:ellipsize="end"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/delete_button_itemView"
        app:layout_constraintStart_toEndOf="@id/imageViewId"
        app:layout_constraintTop_toBottomOf="@id/title_reunion"
        tools:text="maxime@lamzone.com, alex@lamzone.com,paul@lamzone.com" />

    <ImageView
        android:id="@+id/delete_button_itemView"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/delete"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:tint="@color/black" />


</androidx.constraintlayout.widget.ConstraintLayout>
